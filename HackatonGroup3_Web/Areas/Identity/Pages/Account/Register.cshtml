@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex flex-column align-items-center mt-5"
                 style="width: 100%">
                <form asp-route-returnUrl="@Model.ReturnUrl"
                      method="post">
                    <h2 class="mb-5">Create an account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly"
                         class="text-danger"
                         role="alert"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Email">Email</label>
                            <input type="email"
                                   asp-for="Input.Email"
                                   class="form-control"
                                   id="email"
                                   placeholder="Email"
                                   style="width: 300px; border: 2px solid #182351" />
                        </div>
                        <div class="form-group col-md-6 mt-4">
                            <label asp-for="Input.Password">Password</label>
                            <input asp-for="Input.Password" type="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="Password"
                                   style="width: 300px; border: 2px solid #182351" />
                        </div>
                        <div class="form-group col-md-6 mt-4">
                            <label asp-for="Input.ConfirmPassword">Confirm password</label>
                            <input asp-for="Input.ConfirmPassword" type="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="confirm password"
                                   style="width: 300px; border: 2px solid #182351" />
                        </div>
                    </div>

                    <button id="registerSubmit" type="submit"
                            class="btn btn-block mt-5 w-50"
                            style="
                  background-color: #182351;
                  color: #fff;
                  border-radius: 20px;
                ">
                        Create
                    </button>
                </form>
                <div style="
                height: 10px;
                border-top: 3px solid #182351;
                margin-top: 40px;
                width: 50%;
              "></div>
                <p>
                    Already have an account ?
                    <a href="#" style="text-decoration: none"> login</a>
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/img/login.svg" style="width: 100%" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
