@model Users
@{
   
      
    Layout = "_LayoutEmpty";

    ViewData["Title"] = "Log in";
}

<div class="container" style="margin-top: 50px">
    <div class="row">
        <div class="col-md-6">
            <img src="~/img//signup.svg" style="width: 100%; height: 70%" />
        </div>
        <div class="col-md-6">
            <div class="d-flex flex-column align-items-center mt-5"
                 style="width: 100%">
                <form id="account" method="post">
                    <h2 class="mb-5">Log into my account</h2>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   id="email"
                                   placeholder="Email"
                                   style="width: 300px; border: 2px solid #182351" />
                        </div>
                        <div class="form-group col-md-6 mt-4">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="Password"
                                   style="width: 300px; border: 2px solid #182351" />
                        </div>
                    </div>
                    <div>
                        <a style="
                    display: block;
                    text-align: right;
                    font-size: 12px;
                    color: blue;
                  ">
                            Forget password ?
                        </a>
                    </div>
                    <div class="form-group mt-4">
                        <div class="checkbox mb-3">
                            <label asp-for="RememberMe" class="form-label">
                                <input class="form-check" type="checkbox" asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button type="submit"
                            class="btn btn-block mt-5 w-50"
                            style="
                  background-color: #182351;
                  color: #fff;
                  border-radius: 20px;
                ">
                        Login
                    </button>
                </form>
                <div style="
                height: 10px;
                border-top: 3px solid #182351;
                margin-top: 40px;
                width: 50%;
              "></div>
                <p>
                    No account yet?
                    <a href="Account/Register" style="text-decoration: none"> create an account</a>
                </p>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
